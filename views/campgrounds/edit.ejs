<% include ../partials/header %>


<div class="container">
    <div class="w-50 m-auto">
        <h1 class="mb-3 text-center">Edit <%= campground.name %></h1>
        <form class="" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="campground[description]" value="<%= campground.description %>">
            </div>
            <div class="form-group">
                <button class="btn  btn-primary btn-block">Submit</button>
            </div>
        </form>

        <a href="/campgrounds">Go Back!</a>
    </div>
</div>


<% include ../partials/footer %>
