<% include ../partials/header %>


<div class="container">
  <div class="w-50 m-auto">
    <h1 class="mb-3 text-center">Add New comment <%= campground.name %></h1>
    <form class="" action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
          <input type="text" class="form-control" name="comment[text]" value="" placeholder="text">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="comment[author]" value="" placeholder="author">
        </div>
        <div class="form-group">
          <button class="btn  btn-primary btn-block">Submit</button>
        </div>
    </form>

    <a href="/campgrounds">Go Back!</a>
  </div>
</div>


