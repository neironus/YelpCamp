<% include partials/header %>


<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcom To YealpCamp!</h1>
      <p>View our hand-picked campgrounds from all over the world</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
      </p>
    </div>
  </header>
  <div class="row">
    <div class="col-lg-12">
        <h3>Our Most Popular Campgrounds!</h3>
    </div>
  </div>
  <div class="row">
    <% campgrounds.forEach( (campground) => {%>
        <div class="col-lg-3 col-md-4 col-sm-6">
          <!-- <figure class="figure">
            <img src="<%= campground.image %>" class="figure-img img-fluid rounded" alt="">
            <figcaption class="figure-caption"><%= campground.name %></figcaption>
          </figure> -->

          <div class="card border">
            <img class="card-img-top" src="<%= campground.image %>" alt="">
            <div class="card-body">
              <h5 class="card-title"><%= campground.name %></h5>
            </div>
          </div>

        </div>

    <%})%>
  </div>
</div>
<% include partials/footer %>
